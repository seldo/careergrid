<% baseId = skill.name.toLowerCase() + '-' + year %>
<td class="selector">
  <input type="radio" name="<%= baseId %>" value="0" id="<%= baseId %>-0"
         checked="checked">
  <label for="<%= baseId %>-0"><img src="/img/circle-none.png"></label>
  <input type="radio" name="<%= baseId %>" value="1" id="<%= baseId %>-1">
  <label for="<%= baseId %>-1"><img src="/img/circle-light.png"></label>
  <input type="radio" name="<%= baseId %>" value="2" id="<%= baseId %>-2">
  <label for="<%= baseId %>-2"><img src="/img/circle-heavy.png"></label>
</td>